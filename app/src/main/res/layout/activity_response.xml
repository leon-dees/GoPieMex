<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.dees.gopiemex.activities.ResponseActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="header GoPie"
                android:src="@drawable/top_app_daypass" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IMEI: " />
            <TextView
                android:id="@+id/lblImei"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="imei" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/lblRe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:onClick="btnLogin"
                android:text="Login" />
            <TextView
                android:id="@+id/lblLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/btnUser"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:onClick="btnUser"
                android:text="User" />
            <TextView
                android:id="@+id/lblUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/btnGood"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:onClick="btnGood"
                android:text="Goods" />
            <TextView
                android:id="@+id/lblGood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />


            <Button
                android:id="@+id/btnCreateOrder"
                android:onClick="btnCreateOrder"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:text="Create Order" />
            <TextView
                android:id="@+id/lblCreateOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/btnLogout"
                android:onClick="btnLogout"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:text="Logout" />
            <TextView
                android:id="@+id/lblLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!--<Button
                android:id="@+id/btnQueryUserOfferList"
                android:onClick="btnQueryUserOfferList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UserOfferList" />
            <TextView
                android:id="@+id/lblQueryUserOfferList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Response" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />-->

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
